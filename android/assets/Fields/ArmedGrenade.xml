<Field Extends="Solid">
    <FieldName>Grenade</FieldName>
    <Tags>Explosive</Tags>
    <Sprite>
        <Name>Oryx/Custom/terrain/bomb</Name>
    </Sprite>
    <Duration>
        <Fade>
            <Rate>1</Rate>
            <ResetOnStacks>false</ResetOnStacks>
        </Fade>
    </Duration>
    <OnDeath>
        <Ability>
            <ScreenShake>5</ScreenShake>
            <HitType><Any/></HitType>
            <HitSprite>
                <SingleSprite>true</SingleSprite>
                <Name>EffectSprites/Explosion/Explosion</Name>
                <UpdateRate>0.05</UpdateRate>
                <Sound><Name>Explosion</Name></Sound>
            </HitSprite>
            <Light>
                <Colour>
                    <RGB>255,255,100</RGB>
                </Colour>
                <Intensity>3</Intensity>
            </Light>
            <Effect>
                <Damage><Attack>20</Attack></Damage>
                <FieldInteraction>Hot</FieldInteraction>
            </Effect>
        </Ability>
    </OnDeath>
</Field>