	<Cooldown>45</Cooldown>
	<Range>1</Range>
	
	<Icon>
		<Name>Abilities/WinterMagus/IceSheath</Name>
		<Colour><RGB>240,255,255</RGB></Colour>
	</Icon>
	
	<Targeting>
		<Self></Self>
	</Targeting>
	
	<Movement>
		<Smite>
		</Smite>
	</Movement>
	
	<Effect>
		<Status>
			<Attacker>
				<Duration>10</Duration>
				<Events>
					<Constant>
						<Water_Atk>5</Water_Atk>
					</Constant>
					<OnDealDamage>
					    <Status Condition="rnd(1)<0.5">
					        <Defender>Chilled</Defender>
					    </Status>
					</OnDealDamage>
				</Events>
			</Attacker>
		</Status>
	</Effect>
	
</ActiveAbility>