<ActiveAbility>

	<Name>Reversal of Fortune</Name>
	<Description>Next time you would take damage, heal by that amount instead.</Description>
	
	<Cooldown>30</Cooldown>
	<Range>1</Range>
	
	<Icon>
		<Name>Abilities/Protection/ReversalOfFortune</Name>
		<Colour><RGB>210,247,247</RGB></Colour>
	</Icon>
	
	<HitSprite>
		<Name>AbilitySprites/Aegis/Aegis</Name>
		<UpdateRate>0.1</UpdateRate>
		<Colour><RGB>210,247,247</RGB></Colour>
	</HitSprite>
	
	<Targeting>
		<Self></Self>
	</Targeting>
	
	<Movement>
		<Smite>
		</Smite>
	</Movement>
	
	<Effect>
	    <Status>
	        <Attacker>
	            <PersistUntilProcessed>true</PersistUntilProcessed>
	            <Events>
	                <OnReceiveDamage>
	                    <Heal><Defender>Damage</Defender></Heal>
	                    <Damage>
							<Damage>-Damage</Damage>
						</Damage>
	                </OnReceiveDamage>
	            </Events>
	        </Attacker>
	    </Status>
	</Effect>
	
</ActiveAbility>