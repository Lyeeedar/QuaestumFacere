<Passive>
    <Name>Bloodrager</Name>
    <Description>Your attacks have a chance to kindle the bloodthirst within you.</Description>
    <Icon>
        <Name>Icons/CriticalStrikes</Name>
        <Colour><RGB>220,120,120</RGB></Colour>
    </Icon>

    <Events>
        <OnDealDamage>
            <Status Condition="rnd(1) < 0.1 * (level / 2)" Stacks="1+rnd(level/5)">Bloodthirst</Status>
        </OnDealDamage>
    </Events>

</Passive>