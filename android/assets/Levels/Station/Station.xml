<Level>
    <Ambient>
        <Red>0.5</Red>
        <Green>0.4</Green>
        <Blue>0.4</Blue>
    </Ambient>

    <Sound>
        <BGM>Anguish</BGM>
        <Ambient>
            <Sound><Name>spooky1</Name><Repeat>100</Repeat></Sound>
            <Sound><Name>spooky4</Name><Repeat>100</Repeat></Sound>
            <Sound><Name>spooky7</Name><Repeat>100</Repeat></Sound>
            <Sound><Name>spooky8</Name><Repeat>100</Repeat></Sound>
            <Sound><Name>water1</Name></Sound>
        </Ambient>
    </Sound>

    <RoomGenerators>
        <Basic>
            <Weight>6</Weight>
        </Basic>
        <Chambers><Weight>1</Weight></Chambers>
    </RoomGenerators>

    <CorridorStyle>
        <PathStyle>Straight</PathStyle>
        <Width>2</Width>
    </CorridorStyle>

    <Symbols>

        <Symbol>
            <Char>.</Char>
            <TileData>
                <Opaque>false</Opaque>
                <Passable>true</Passable>
                <Sprite>
                    <Name>Oryx/uf_split/uf_terrain/floor_extra_16</Name>
                </Sprite>
            </TileData>
        </Symbol>

        <Symbol>
            <Char>#</Char>
            <TileData>
                <Opaque>true</Opaque>
                <Passable>false</Passable>

                <TilingSprite>
                    <Name>Wall</Name>
                    <Top>
                        <Name>Oryx/Custom/terrain/RustWallTop</Name>
                    </Top>
                    <Front>
                        <Name>Oryx/Custom/terrain/RustWallFront</Name>
                    </Front>
                    <Overhang>
                        <Name>Oryx/Custom/terrain/RustWallOverhang</Name>
                    </Overhang>
                </TilingSprite>

            </TileData>
        </Symbol>

        <Symbol Extends=".">
            <Char>+</Char>
            <EnvironmentData>
                <Type>Door</Type>
            </EnvironmentData>
        </Symbol>

        <Symbol Extends=".">
            <Char>s</Char>
            <EnvironmentData>
                <Sprite>
                    <Name>Oryx/Custom/terrain/safe</Name>
                </Sprite>
                <Passable>false</Passable>
                <Opaque>false</Opaque>
                <OnActivate>
                    <Group Name="Open">
                        <Conditions FailMessage="You need a safecracker to open this">
                            <HasItem>Safecracker</HasItem>
                        </Conditions>
                        <Actions>
                            <SetEnabled Enabled="false">Open</SetEnabled>
                            <AddItem>
                                <Name>Gemstone</Name>
                                <Description>A rare looking gemstone. It should be easy to find a buyer for this.</Description>
                                <Category>Treasure</Category>
                                <Icon>
                                    <Name>Oryx/uf_split/uf_items/gem_amethyst</Name>
                                </Icon>
                                <Value>100</Value>
                            </AddItem>
                        </Actions>
                    </Group>
                </OnActivate>
            </EnvironmentData>
        </Symbol>

    </Symbols>

    <Rooms>
        <Padding Condition="rnd(3)+2" >
            <Width>7</Width>
            <Height>7</Height>
        </Padding>
    </Rooms>

    <Features>
        <Feature>
            <Name>Rubbish</Name>
            <Placement>Any</Placement>
            <EnvironmentData>
                <Sprite>
                    <Name>Oryx/Custom/terrain/Rubbish</Name>
                </Sprite>
                <Passable>false</Passable>
                <Opaque>false</Opaque>
            </EnvironmentData>

            <Coverage>10</Coverage>
        </Feature>

        <Feature>
            <Name>Locker</Name>
            <Placement>Wall</Placement>
            <EnvironmentData>
                <Sprite>
                    <Name>Oryx/Custom/terrain/locker</Name>
                </Sprite>
                <Passable>false</Passable>
                <Opaque>false</Opaque>
            </EnvironmentData>

            <Coverage>10</Coverage>
        </Feature>
    </Features>
</Level>