<Recipe>

    <ItemTemplate>
        <Name>Rifle</Name>
        <Description>Good for putting a bullet in a target</Description>

        <Slot>Weapon</Slot>
        <Category>Weapon</Category>
        <Type>Rifle</Type>
        <Value>120</Value>

        <Icon>
            <Name>Oryx/Custom/items/Rifle</Name>
        </Icon>

        <Events>
            <Constant>
                <Attack>20 + 5 * quality</Attack>
                <Accuracy>90 + quality</Accuracy>
            </Constant>
        </Events>
    </ItemTemplate>

    <AllowedAbilities>
        <PowerShot MinQuality="3"></PowerShot>
    </AllowedAbilities>

    <Names>
        <Combat_Rifle></Combat_Rifle>
        <Fusil></Fusil>
        <Carbine></Carbine>
        <Blaster></Blaster>
    </Names>

    <AllowedModifiers>
        <Incendiary MinQuality="3"></Incendiary>
    </AllowedModifiers>
</Recipe>