<Recipe>

    <ItemTemplate>
        <Name>Assault</Name>
        <Description>Spray and pray</Description>

        <Slot>Weapon</Slot>
        <Category>Weapon</Category>
        <Type>Assault</Type>
        <Value>120</Value>

        <Icon>
            <Name>Oryx/Custom/items/Rifle</Name>
        </Icon>

        <Events>
            <Constant>
                <Attack>6 + 1.2 * quality</Attack>
                <Accuracy>70 + quality</Accuracy>
            </Constant>
        </Events>
    </ItemTemplate>

    <AllowedAbilities>
        <AimedShot></AimedShot>
        <GunBash></GunBash>
        <FullAuto></FullAuto>
    </AllowedAbilities>

    <Names>
        <Assault_Rifle></Assault_Rifle>
        <Repeater></Repeater>
        <Gatling_Rifle></Gatling_Rifle>
        <Pulveriser></Pulveriser>
    </Names>

    <AllowedModifiers>
        <Accuracy></Accuracy>
        <Attack></Attack>
        <Penetration></Penetration>
        <Burning MinQuality="2"></Burning>
        <Chilling MinQuality="2"></Chilling>
        <Stunning MinQuality="3"></Stunning>
    </AllowedModifiers>
</Recipe>