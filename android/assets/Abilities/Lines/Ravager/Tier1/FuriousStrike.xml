<ActiveAbility>

	<Name>Furious Strike</Name>
	<Description>Channel all your bloodlust into a single attack.</Description>
	
	<Cooldown>10</Cooldown>
	<Range>1</Range>
	
	<Icon>
		<Name>Skills/PowerStrike</Name>
	</Icon>
	
	<HitSprite>
		<Name>strike/strike</Name>
		<UpdateRate>0.1</UpdateRate>
	</HitSprite>
	
	<Type>
		<Harmful>
		</Harmful>
	</Type>
	
	<Targeting>
		<Entity>
			<NotSelf></NotSelf>
		</Entity>
	</Targeting>
	
	<Movement>
		<Smite>
		</Smite>
	</Movement>
	
	<Effect>
		<Damage>
			<Statistics ReliesOn="Bloodlust">
				<Metal_Atk>METAL_ATK*(1+0.15*BLOODLUST)</Metal_Atk>
				<Wood_Atk>WOOD_ATK*(1+0.15*BLOODLUST)</Wood_Atk>
				<Air_Atk>AIR_ATK*(1+0.15*BLOODLUST)</Air_Atk>
				<Water_Atk>WATER_ATK*(1+0.15*BLOODLUST)</Water_Atk>
				<Fire_Atk>FIRE_ATK*(1+0.15*BLOODLUST)</Fire_Atk>
			</Statistics>
		</Damage>
	</Effect>
	
</ActiveAbility>