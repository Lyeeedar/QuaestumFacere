<Entity>
	<Name>Player</Name>
	
	<Factions>
		<Faction>Player</Faction>
	</Factions>
	
	<AI>player</AI>
	<Essence>400</Essence>
	
	<CanSwap>true</CanSwap>
	
	<Sprite>
		<Name>Oryx/uf_split/uf_heroes/wizard</Name>
		<DrawActualSize>true</DrawActualSize>
	</Sprite>
	
	<Statistics>
		<MaxHP>90</MaxHP>
		<Range>10</<Range>	
		<Base_Atk>5</Base_Atk>
		<Defense>2</Defense>
	</Statistics>
	
	<Inventory>
		<Equipment>
		    
		    <Wand>
		        <Name>Wand</Name>
		        <Description>You're a wizard Harry</Description>
		        
		        <Slot>MainWeapon</Slot>
				<Category>Weapon</Category>
				<Type>Wand</Type>
			
				<Events>
					<Constant>
						<Air_Atk>5</Air_Atk>
					</Constant>
				</Events>
		    </Wand>
		    
		    <Top>
		        
		        <Name>Padded Shirt</Name>
		        <Description>A thick padded shirt. Can keep you warm in the cold nights and protect you from small amounts of stabbing.</Description>
		        <Slot>Body</Slot>
		        <Category>Armour</Category>
		        
		        <Events>
					<Constant>
						<Defense>5</Defense>
					</Constant>
				</Events>
				
		        <Icon>
		            <Name>Oryx/uf_split/uf_items/armor_leather_chest</Name>
		        </Icon>
		        
		    </Top>
		    
		     <Leg>
		        
		        <Name>Padded Trousers</Name>
		        <Description>Is that a large amount of protective insulation in your pocket, or are you just happy to see me?</Description>
		        <Slot>Legs</Slot>
		        <Category>Armour</Category>
		        
		        <Events>
					<Constant>
						<Defense>3</Defense>
					</Constant>
				</Events>
				
		        <Icon>
		            <Name>Oryx/uf_split/uf_items/armor_leather_leg</Name>
		        </Icon>
		        
		    </Leg>
		    
			<Item>Misc/BasicLantern</Item>
		</Equipment>
	</Inventory>
	
</Entity>