<ActiveAbility>

	<Name>Conductivity</Name>
	<Description>Charge your targets with electricity, increasing the damage they take from air magic and making them release bolts of lightning on death.</Description>
	
	<Cooldown>30</Cooldown>
	<AOE>2</AOE>
	<Range>4</Range>
	
	<Icon>
		<Name>Abilities/Electron/Conductivity</Name>
		<Colour><RGB>248,255,43</RGB></Colour>
	</Icon>
	
	<HitSprite>
		<Name>AbilitySprites/LightningBurst/LightningBurst</Name>
		<UpdateRate>0.1</UpdateRate>
		<Colour><RGB>220,200,250</RGB></Colour>
	</HitSprite>
	
	<Targeting>
		<Tile />
	</Targeting>
	
	<Movement>
		<Smite />
	</Movement>
	
	<Effect>
		<Status>
		    <Defender>
		        <Duration>10</Duration>
		        <Events>
		            <OnReceiveDamage>
		                <Damage>Damage*1.2</Damage>
		            </OnReceiveDamage>
		            
		            <OnDeath>
		                <Field>
		                    <Field>Static</Field>
		                    <Stacks>6</Stacks>
		                </Field>
		            </OnDeath>
		        </Events>
		    </Defender>
		</Status>
	</Effect>
	
</ActiveAbility>