<PassiveAbility>
	<Name>Bloodthirst</Name>
	<Description>The sight of blood fills you with terrible joy, spurring you onto even greater heights of violence.</Description>
	<Icon>
		<Name>Skills/Bloodlust</Name>
	</Icon>
	
	<Events>
		<Constant ReliesOn="Bloodlust">			
			<Metal_Atk>METAL_ATK*(0.15*BLOODLUST)</Metal_Atk>
			<Wood_Atk>WOOD_ATK*(0.15*BLOODLUST)</Wood_Atk>
			<Air_Atk>AIR_ATK*(0.15*BLOODLUST)</Air_Atk>
			<Water_Atk>WATER_ATK*(0.15*BLOODLUST)</Water_Atk>
			<Fire_Atk>FIRE_ATK*(0.15*BLOODLUST)</Fire_Atk>
		</Constant>
		<OnReceiveDamage>
			<Status>
				<Condition>rnd(1)&lt;0.2</Condition>
				<Defender>Bloodlust</Defender>
			</Status>
		</OnReceiveDamage>
	</Events>
	
</PassiveAbility>