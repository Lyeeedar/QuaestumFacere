<Active>
	<Name>Protective Spirit</Name>
	<Description>Reduce all incoming damage.</Description>

	<Cooldown>30</Cooldown>
	<Range>1</Range>

	<Icon>
		<Name>Abilities/Protection/ProtectiveSpirit</Name>
		<Colour><RGB>210,247,247</RGB></Colour>
	</Icon>

	<HitSprite>
		<Name>AbilitySprites/Aegis/Aegis</Name>
		<UpdateRate>0.1</UpdateRate>
		<Colour><RGB>210,247,247</RGB></Colour>
	</HitSprite>

	<Targeting>
		<Self></Self>
	</Targeting>

	<Effect>
	    <Status>
            <Duration>15</Duration>
            <Events>
                <OnReceiveDamage>
                    <Damage>
                        -Damage*(0.05*level)
                    </Damage>
                </OnReceiveDamage>
            </Events>
	    </Status>
	</Effect>

</Active>