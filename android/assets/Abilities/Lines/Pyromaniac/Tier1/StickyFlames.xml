<PassiveAbility>
	<Name>Sticky Flames</Name>
	<Description>Your fire attacks ignite your foes.</Description>
	<Icon>
		<Name>Abilities/Pyromaniac/StickyFlames</Name>
		<Colour><RGB>255,165,0</RGB></Colour>
	</Icon>
	
	<Events>
		<OnDealDamage>
			<Status Condition="damage_fire > 0 && rnd(1) < 0.4" ReliesOn="Burning">
				<Defender>Burning</Defender>
				<Stacks>CEIL(DAMAGE_FIRE/100)</Stacks>
			</Status>
		</OnDealDamage>
	</Events>
	
</PassiveAbility>