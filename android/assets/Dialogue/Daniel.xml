<Dialogue>
    
    <Exclamations>
	    <SeePlayer Cooldown="50">
	        <Exclamation>
	            <Text>Oh hey, it lives! Come over here and chat to me.</Text>
	            <Sound>
	                <Name>Male/Greeting</Name>
	            </Sound>
	        </Exclamation>
	    </SeePlayer>
	</Exclamations>
    
    <Dialogue>
	    <Chunk>
	        <Text>
	            <Text>So finally joined the world of the living. How do you feel?</Text>
	            <Sound><Name>Male/Greeting</Name></Sound>
	        </Text>
	        <Input Key="Response">
	            <Choice>I um... What?</Choice>
	        </Input>
	        <Text>
	            <Text>Do you remember anything at all? Like your name?</Text>
	            <Sound><Name>Male/Neutral</Name></Sound>
	        </Text>
	        <Input Key="Response">
	            <Choice>My name? Name... I think my name is $player$?</Choice>
	        </Input>
	        <Text>
	            <Text>$player$? That's a good name. I'm Daniel, pleased to meet you.</Text>
	            <Sound><Name>Male/Agreement</Name></Sound>
	        </Text>
	        <SetVariable>
			    <Key>ExitLoop</Key>
			    <Value>0</Value>
		    </SetVariable>
	        <Loop Condition="ExitLoop" ReliesOn="ExitLoop">
	             <Input Key="Response">
		            <Choice>Where am I?</Choice>
		            <Choice>What's going on?</Choice>
		            <Choice>Who am I?</Choice>
		            <Choice>That's all I want to know for now.</Choice>
		        </Input>
		        <Branch>
		            <Branch Condition="Response==1">
		                <Text>
				            <Text>A small town called Reach on the plane of Aether.</Text>
				            <Sound><Name>Male/Neutral</Name></Sound>
				        </Text>
		            </Branch>
		            <Branch Condition="Response==2">
		                <Text>
				            <Text>You have just come to life.</Text>
				            <Sound><Name>Male/Neutral</Name></Sound>
				        </Text>
		            </Branch>
		            <Branch Condition="Response==3">
		                <Text>
				            <Text>You are a human.</Text>
				            <Sound><Name>Male/Neutral</Name></Sound>
				        </Text>
		            </Branch>
		            <Branch Condition="Response==4">
		                <SetVariable>
		                    <Key>ExitLoop</Key>
		                    <Value>1</Value>
		                </SetVariable>
		            </Branch>
		        </Branch>
	        </Loop>
	       
	        
	    </Chunk>
    </Dialogue>
    
</Dialogue>