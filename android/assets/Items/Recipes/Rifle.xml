<Recipe>

    <ItemTemplate>
        <Name>Rifle</Name>
        <Description>Good for putting a bullet in a target</Description>

        <Slot>Weapon</Slot>
        <Category>Weapon</Category>
        <Type>Rifle</Type>
        <Value>120</Value>

        <Icon>
            <Name>Oryx/Custom/items/Rifle</Name>
        </Icon>

        <Events>
            <Constant>
                <Attack>28 + 6.5 * quality</Attack>
                <Accuracy>100 + 2 * quality</Accuracy>
            </Constant>
        </Events>
    </ItemTemplate>

    <AllowedAbilities>
        <AimedShot></AimedShot>
        <GunBash></GunBash>
        <FullAuto></FullAuto>
    </AllowedAbilities>

    <Names>
        <Combat_Rifle></Combat_Rifle>
        <Fusil></Fusil>
        <Carbine></Carbine>
        <Blaster></Blaster>
    </Names>

    <AllowedModifiers>
        <Accuracy></Accuracy>
        <Attack></Attack>
        <Penetration></Penetration>
        <Burning MinQuality="2"></Burning>
        <Chilling MinQuality="2"></Chilling>
        <Stunning MinQuality="3"></Stunning>
    </AllowedModifiers>
</Recipe>